---
interface Props {
    tokenUrl: string;
}

const { tokenUrl } = Astro.props;
---

<img src={tokenUrl} alt="" class="token" />

<style>
    img {
        width: 50px;
        height: 50px;
        position: absolute;
    }

    @keyframes tokenMoveLeft {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-80px);
        }
    }

    @keyframes tokenMoveUp {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(-80px);
        }
    }

    @keyframes tokenMoveRight {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(80px);
        }
    }

    @keyframes tokenMoveDown {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(80px);
        }
    }
</style>
